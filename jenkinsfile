pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                sh "docker build -t nabawi/aser:${env-BUILD_NUMBER} ."
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable:
                'pass', usernameVariable: 'user')]) {
                sh "docker login -u $user -p $pass " } 
                sh "docker push nabawi/aser:${env-BUILD_NUMBER}"
            }
        }
    
stage("deploy"){
steps{
sh "docker run -d -p 5000:8080 nabawi/aser:${env-BUILD_NUMBER}"
}
}
}
